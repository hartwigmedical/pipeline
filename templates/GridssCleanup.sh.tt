#!/usr/bin/env bash
# -*- TT -*-

[% INCLUDE ErrorHandling.tt %]
[% INCLUDE Logging.tt job_name="GridssCleanup" main_step=joint_name log_name="GridssCleanup_${joint_name}.log" %]

echo "[INFO] Cleaning up sample working directory (including SV BAM) for [% ref_sample %] - $(date)"

rm -r "[% ref_sample_working_dir %]"

echo "[INFO] Cleaning up sample working directory (including SV BAM) for [% tumor_sample %] - $(date)"

